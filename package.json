{
  "name": "template",
  "version": "1.0.0",
  "description": "template",
  "config": {
    "breakpoints": {
      "xs": 0,
      "sm": 576,
      "md": 768,
      "lg": 992,
      "xl": 1200
    }
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.{html,ejs}": [
      "htmlhint"
    ]
  },
  "scripts": {
    "lint": "npm run lint:styles; npm run lint:scripts",
    "lint:styles": "stylelint src/styles",
    "lint:scripts": "eslint src/scripts",
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.prod.js",
    "build:dev": "cross-env NODE_ENV=development webpack --config webpack/webpack.config.prod.js",
    "start": "cross-env NODE_ENV=development webpack serve --port 8888 --config webpack/webpack.config.dev.js",
    "deploy": "npm run build:dev && rsync -auvz -e 'ssh -i ~/.ssh/(secretKey)' build/* user@server:/var/www/html/dev/"
  },
  "author": "kobataka0505",
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.16.8",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^10.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "ejs": "^3.1.6",
    "eslint": "^8.7.0",
    "eslint-webpack-plugin": "^3.1.1",
    "file-loader": "^6.2.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "htmlhint": "^1.1.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.5.1",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.2.3",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.7.1",
    "sass": "^1.49.9",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.2.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-order": "^5.0.0",
    "stylelint-webpack-plugin": "^3.1.1",
    "template-ejs-loader": "^0.8.1",
    "terser-webpack-plugin": "^5.3.1",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "core-js": "^3.20.3",
    "jquery": "^3.6.0"
  }
}
